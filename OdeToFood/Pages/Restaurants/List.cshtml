@page
@model ListModel
@{
    ViewData["Title"] = "Restaurants";
}

<img class="img-responsive" src="https://static.vecteezy.com/system/resources/thumbnails/000/274/987/small/10_cmVzdGF1cmFudF9sb2dvLTA3.jpg" width="200" height="200" />
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input class="form-control" type="search" asp-for="SearchTerm" placeholder="Search restaurant..." />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Country</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-lg" style="color:darkslateblue" asp-page="./Detail"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
                <a class="btn btn-lg" style="color:navy" asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
                <a class="btn btn-lg" style="color:saddlebrown" asp-page="./Delete"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-primary" asp-page=".\Edit">Create New Restaurant</a>

